<UserControl
    x:Class="LearnAndGrow.View.Childs.WelcomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LearnAndGrow.ViewModel.Childs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:childs="clr-namespace:LearnAndGrow.Model.Childs" xmlns:childs1="clr-namespace:LearnAndGrow.ViewModel.Childs"
    d:DataContext="{d:DesignInstance Type= childs1:WelcomeViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="35"            
            Text="Welcome to the English language tutorial !!! "  />

        <TextBlock Text="Всьго слів в словнику: " Margin="50,60,200,50" FontSize="25"/>
        <TextBlock Text="{Binding CountWords}" Margin="305,60,180,50" FontSize="25"/>
        <TextBlock Text="Вивчено слів:" Margin="50,90,180,50" FontSize="25"/>
        <TextBlock Text="{Binding CountWordsLearned}" Margin="210,90,350,50" FontSize="25"/>
        <TextBlock Text="Не вивчених слів:" Margin="50,120,350,50" FontSize="25"/>
        <TextBlock Text="{Binding CountWordsNotLearned}" Margin="255,120,350,50" FontSize="25"/>
    </Grid>
</UserControl>